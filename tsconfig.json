{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist/scripts",
        "strict": true,
        "jsx": "react",
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}